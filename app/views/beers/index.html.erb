<h1>All Beers</h1>

<br>
<div class="row">
  <% @beers.each do |beer| %>
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= image_tag(beer.image, :height => '180', :width => '240') %><br>
          <%= link_to beer.name, beer_path(beer) %> ($<%= beer.price %>) <%= beer.description %>
          <%= button_to "Add to Cart", cart_path(beer_id: beer.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
