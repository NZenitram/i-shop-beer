<div class="container-fluid text-center" id="login-header">
  <h2> Login </h2>
</div>
<div class="form-horizontal center-block">
  <div class="form-group" id="email-group" >
    <%= form_tag "/" do %>
      <label for="email" class="col-sm-3 control-label"><%= label_tag :email %></label>
      <div class="col-sm-9">
        <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group" id="email-group">
      <label for="email" class="col-sm-3 control-label"><%= label_tag :password %></label>
      <div class="col-sm-9">
        <%= password_field_tag :password, nil, class: "form-control", placeholder:"Password" %>
      </div>
    </div>
    <div class="form-group text-center">
      <%= submit_tag "Login", class:'btn btn-secondary' %>
    </div>
    <div class="text-center">
      <p>If you don't have an account, <%= link_to "create one", new_user_path %></p>
    </div>
  <% end %>
</div>
