<div class="container-fluid">
  <h1>Order #<%= @order.id %></h1>
</div>
<div class="container-fluid">
  <% @order.beers.each do |beer| %>
  <%= link_to beer.name, beer_path(beer) %>
  <ul>
    <li>Price: <%= number_to_currency(beer.price) %></li>
    <li>Quantity: <%= beer.get_beer_order(@order) %></li>
    <li>Subtotal: <%= number_to_currency(beer.get_subtotal(@order)) %></li>
  </ul>
    <% end %>
</div>

<p> Order Date: <%= @order.created_at %> </p>
<% if @order.order_status == "cancelled" || @order.order_status == "completed" %>
  <p> Order Status: <%= @order.order_status %> </p>
  <p> Last Updated: <%= @order.updated_at %> </p>
<% end %>
<p> Order Total: <%= number_to_currency(@total) %> </p>
